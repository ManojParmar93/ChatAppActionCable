<li class='<%= "message appeared #{message.user == current_user ? 'right' : 'left'}" %>'>
  <div class="avatar"></div>
  <div class="text_wrapper">
      <div class="text">
        <%= message.content %>
      </div>
      <div class=" text pull-right small"><%= "#{time_ago_in_words(message.created_at)} ago by #{message.user.email.split('@').first}" %></div> 
  </div> 
</li>
<script type="text/javascript">
    $(document).ready(function(){
        $('.messages').animate({scrollTop: $('ul#messages li:last').offset().top});
    });
</script>